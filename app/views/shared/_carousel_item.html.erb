<div class="carousel-item col-md-4 <%= 'active' if idx == 0 %>">
  <div class="card">
    <img class="card-img-top img-fluid" src="<%= data['poster'] %>" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title"><%= data['title'] %></h4>
      <p class="card-text"><%= data['plot'] %></p>
      <p class="card-text">
        <small class="text-muted">
          imdb rating: <%= data['imdb_rating'] %>, imdb_votes: <%= data['imdb_votes'] %>
        </small>
      </p>
      <p class="card-text">
        <small class="text-muted">
          <%= data['year'] %>, <%= data['rated'] %>, <%= data['runtime'] %>, <%= data['actors'] %>
        </small>
      </p>
    </div>
  </div>
</div>
